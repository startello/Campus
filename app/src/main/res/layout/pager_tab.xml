<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pager_tab_ripple"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:mrl_rippleAlpha="0.6"
        app:mrl_rippleColor="@color/accent"
        app:mrl_rippleDelayClick="false"
        android:layout_marginBottom="1dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/pager_tab_container"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pager_tab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="@color/text_icon"
                android:textSize="14sp"
                android:textStyle="normal"
                android:typeface="sans" />
                <TextView
                android:id="@+id/pager_tab_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/text_white_secondary"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:typeface="sans"
                android:text="24 Травня"/>
            </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>